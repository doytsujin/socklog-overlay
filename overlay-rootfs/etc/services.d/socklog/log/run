#!/usr/bin/execlineb -P

backtick -i -n LOGGING_SCRIPT
{
  pipeline { pipeline { s6-ls -0 -- /etc/socklog.rules } s6-sort -0 }
  forstdin -0 -- i
  importas -u i i
  redirfd -rb 0 /etc/socklog.rules/${i}
  s6-cat
}

importas -u -s LOGGING_SCRIPT LOGGING_SCRIPT

s6-setuidgid nobody
s6-log -bp $LOGGING_SCRIPT
